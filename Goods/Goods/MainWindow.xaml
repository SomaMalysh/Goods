<Window x:Class="Goods.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Goods"
        mc:Ignorable="d"
        Title="Goods" Height="450" Width="800">
    <TabControl HorizontalAlignment="Stretch" Name="tcMain" VerticalAlignment="Stretch"  VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
        <TabItem Header="Про програму">
            <Grid Background="#FFE5E5E5">
                <TextBlock HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" Text="Тут буде якась корисна (і не дуже) інформація" VerticalAlignment="Center" FontSize="18"/>
            </Grid>
        </TabItem>
        <TabItem Header="Додати товар">
            <Grid Background="#FFE5E5E5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Ім'я  " VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                <TextBlock Grid.Row="1" Text="Категорія  " VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                <TextBlock Grid.Row="2" Text="Термін експлуатації  " VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                <TextBlock Grid.Row="3" Text="Короткий опис  " VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                <TextBlock Grid.Row="4" Text="Примітки  " VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                <TextBox Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"></TextBox>
                <ComboBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"></ComboBox>
                <Button Grid.Column="2" Grid.Row="1" Content="Add new"></Button>


            </Grid>
        </TabItem>
        <TabItem Header="Переглянути товар">
            <Grid Background="#FFE5E5E5"/>
        </TabItem>
        <TabItem Header="Редагувати товар">
            <Grid Background="#FFE5E5E5"/>
        </TabItem>
        <TabItem Header="Видалити товар">
            <Grid Background="#FFE5E5E5"/>
        </TabItem>
        <TabItem Header="Звіт">
            <Grid Background="#FFE5E5E5"/>
        </TabItem>
    </TabControl>

</Window>
